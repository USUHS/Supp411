/* Progress Bar */
#progressBar
  position absolute
  width 350px
  height 13px

  .background
    height 13px
    position absolute

    div
      float left
      height 13px

    .bg-left
      width 2px
      background-image url("resources/playerControls_left.png")

    .bg-right
      width 2px
      background-image url("resources/playerControls_right.png")

    .bg-middle
      width 346px
      background-image url("resources/playerControls_middle.png")
      background-repeat repeat-x

  .scrub-bar
    position relative
    margin 2px 0 0 2px
    width 50px
    height 9px
    background-image url("resources/playerControls_scrubber.png")

  .ticks
    position relative
    top -12px
    margin 2px 0 0 2px
    height 11px

    div
      height 11px
      float left

    .gap
      background-image none

    .tick
      width 1px
      background-image url("resources/progressDivider.png")

