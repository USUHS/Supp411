    margin-bottom 10px

    .dki-lineitem
      color darkGrey

  #endMod_actions,
  #endCourse_actions,
  #endTest_actions
    a
    a.disabled
    a.disabled:hover
    a.disabled.active
      background-color darkBlue
      color white
      text-shadow 0 -1px 1px #333333
      boxShadow 3px 3px 5px #999999

    a
      &:hover
        background-color blue

  #endScreen
    .dki-title
      color white

    .dki-lineitem
      font-size 14px
      font-weight normal
      color darkGrey

      .dki-modTitle
        font-weight bold

      .dki-modBtn
        padding 6px 20px
        font-weight bold
        background-color darkBlue
        box-shadow none

        &:hover
