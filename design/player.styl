    .dropdown-button
      display block
      margin 5px 5px 0px 5px
      height 32px
      width 59px
      cursor pointer
      backgroundImage('resources/mobile_buttons.png')

      .button-left,
      .button-middle,
      .button-right
        display none

      &.last
