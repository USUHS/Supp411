      margin-right 5px
      margin-left 0
      color #6b6b6b

    #listButton
      display none

    #backButton,
    #forwardButton
      width 59px
      height 32px
      backgroundImage('resources/mobile_buttons.png')

      span
        display none

    #forwardButton
      background-position -236px 0px

      &:hover
        background-position -236px -32px

      &:active
        background-position -177px -96px

    #backButton
      background-position -236px -96px

      &:hover
        background-position -295px 0px

      &:active
        background-position -236px -64px

  #moreButtons
