        height 30px

  #dropdown
    position absolute
    top 36px
    left 136px
    z-index 1000000
    border 1px solid #707070
    borderRadius(4px)
    downGradient(gradientStart, gradientEnd, #CCCCCC)
    boxShadow(3px, 3px, 8px, #888F8F)

    &.hidden
